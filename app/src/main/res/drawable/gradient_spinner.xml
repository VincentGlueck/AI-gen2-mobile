<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#80674FA3" android:startColor="#90E8EBEF" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/purple" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="4dp" android:top="1dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/arrow_down" />
            </item>
        </layer-list>
    </item>
</selector>