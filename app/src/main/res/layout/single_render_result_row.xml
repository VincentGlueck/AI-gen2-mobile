<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/render_result_row"
    android:layout_width="match_parent"
    android:paddingTop="4dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3">

    <ImageView
        android:id="@+id/history_render_result_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:paddingBottom="2dp"
        android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/image_view_size_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:text="dummy"
            android:textColor="@color/lightGrayTransparent"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7" >

    <TextView
        android:id="@+id/render_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="*title*"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/render_result_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:textColor="@color/lightGrayTransparent"
        android:text="*date*"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/render_result_query_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:textColor="@color/lightGrayTransparent"
        android:text="*queryUsed*"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="3"
        tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
