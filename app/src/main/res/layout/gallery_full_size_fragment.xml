<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="2dp">

        <ImageView
            android:id="@+id/gallery_full_size_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_gravity="start|bottom"
            android:layout_marginTop="-48dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="4dp"
            android:background="@color/lightGrayTransparent">

                <ImageView
                    android:id="@+id/gallery_full_size_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="5"
                    android:contentDescription="@string/btn_share"
                    android:scaleType="center"
                    android:src="@drawable/ic_share" />

                <CheckBox
                    android:id="@+id/gallery_full_size_share_with_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="@string/include_description"
                    android:textColor="@color/white"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1000" />

                <ImageView
                    android:id="@+id/gallery_full_size_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="100"
                    android:contentDescription="@string/btn_delete"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/white"/>

        </LinearLayout>

</LinearLayout>

